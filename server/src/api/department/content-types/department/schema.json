{
  "kind": "collectionType",
  "collectionName": "departments",
  "info": {
    "singularName": "department",
    "pluralName": "departments",
    "displayName": "Department"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "richtext"
    },
    "people": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::person.person",
      "mappedBy": "department"
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "mappedBy": "domains"
    },
    "publications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::publication.publication",
      "mappedBy": "domain"
    },
    "datasets": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::dataset.dataset",
      "mappedBy": "department"
    },
    "research_units": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::research-unit.research-unit",
      "mappedBy": "departments"
    }
  }
}
